<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room Information</title>
</head>
<body>
    <h1>Room Information for <%= roomName %></h1>

    <div id="roomInfo">
    </div>
    <button onclick="leaveRoom()">Leave Room</button>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        
        socket.emit('room', '<%= roomName %>');
        let roomUsers = [];

        socket.on('room-info', (roomInfo) => {
            const roomInfoDiv = document.getElementById('roomInfo');
            roomInfoDiv.innerHTML = `<p>Admin: ${roomInfo.admin}</p>`;
            roomInfoDiv.innerHTML += `<p>Users count: ${roomInfo.usersCount}</p>`; 
            roomUsers = roomInfo.users;

            // Display each room user on the HTML page
            roomUsers.forEach((user) => {
                const userElement = document.createElement('p');
                userElement.textContent = `Users: ${user}`;
                roomInfoDiv.appendChild(userElement);
                console.log(user);
            });
        });

        const leaveRoom = () => {
            const confirmLeave = confirm('Are you sure you want to leave the room?');
            if (confirmLeave) {
                socket.emit('leave-room', '<%= roomName %>', 'Samandar'); // Pass the userName to the server
                window.location.assign('/')
            }
        };

    </script>
</body>
</html>
